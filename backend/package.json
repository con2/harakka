  "description": "A Storage and Booking Backend run with NestJS and Supabase",
  "private": true,
  "scripts": {
    "build": "nest build",
    "postbuild": "echo \"✅ Backend build completed successfully!\" && echo \"📁 Backend dist contents:\" && ls -la dist/backend || ls -la dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node -r tsconfig-paths/register dist/backend/src/main.js",
    "start:watch": "nest start --watch -r tsconfig-paths/register",
    "start:dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "start:local": "env-cmd -f ../.env.supabase.local npm run start:watch",
    "start:debug": "nest start --debug --watch -r tsconfig-paths/register",
    "start:prod": "node -r tsconfig-paths/register dist/backend/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" ",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "email:dev": "email dev -p 3001",
    "generate:types": "npx supabase gen types typescript --project-id rcbddkhvysexkvgqpcud > src/types/supabase.types.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/throttler": "^6.4.0",
    "@react-email/components": "^0.3.1",
    "@react-email/render": "^1.1.2",
    "@supabase/supabase-js": "^2.53.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/papaparse": "^5.3.16",
    "bwip-js": "^4.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "common": "file:../common",
    "dayjs": "^1.11.13",
    "full-stack-booking-app": "file:..",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.2",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.17.1",
    "react-email": "^4.0.13",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "supabase": "^2.31.8",
    "type-fest": "^4.41.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.4",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^30.0.3",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/supertest": "^6.0.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "overrides": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0",
    "@nestjs/platform-express": {
      "multer": "2.0.2"
    }
  }
}
